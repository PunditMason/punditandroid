<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.softuvo.ipundit.views.CustomLinearLayout
        android:id="@+id/ll_user_profile_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_background"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.softuvo.ipundit.views.CustomRelativeLayout
            android:id="@+id/rl_blur_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.4">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_manage_leagues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_leagues"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small_large"
                android:layout_marginTop="5dp"
                android:background="@color/colorPodcastPage"/>

            <ImageView
                android:id="@+id/iv_my_podcasts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/my_podcasts"
                android:padding="5dp"
                android:contentDescription="@string/app_name"
                />

            <ImageView
                android:id="@+id/iv_save_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:src="@drawable/save_profile"
                android:contentDescription="@string/app_name"/>

            <FrameLayout
                android:id="@+id/fl_profileImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/colorGray"
                    app:civ_border_width="@dimen/margin_2_dp"
                    android:background="@drawable/profile_dummy_image" />

                <ImageView
                    android:id="@+id/iv_delete_profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:src="@drawable/delete_profile"
                    android:contentDescription="@string/app_name"/>

                <ImageView
                    android:id="@+id/iv_edit_profileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/edit_profile"
                    android:contentDescription="@string/app_name"/>
            </FrameLayout>

            <TextView
                android:layout_below="@+id/iv_save_profile"
                android:id="@+id/tv_schedule_broadcasts"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_small"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduled_broadcasts"
                android:background="@color/colorPodcastPage"
                android:visibility="gone"/>

            <EditText
                android:layout_marginTop="@dimen/margin_small"
                android:id="@+id/ed_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_profileImage"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBlack"
                android:hint="@string/user_name"
                android:maxLines="1"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:layout_marginBottom="@dimen/pading_2dp"
                android:paddingBottom="@dimen/pading_large"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_14sp" />
        </com.softuvo.ipundit.views.CustomRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.09"
            android:background="@color/colorBlack"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_followers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical">

                <com.softuvo.ipundit.views.CustomTextView
                    android:id="@+id/tv_follower_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower_initial_count"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower_string"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:id="@+id/ll_followings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical">

                <com.softuvo.ipundit.views.CustomTextView
                    android:id="@+id/tv_following_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower_initial_count"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/following_string"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.56"
            android:orientation="vertical"
            android:background="@color/colorProfileGray"
            android:padding="@dimen/margin_small_large"
            android:weightSum="6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2.4"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_me_tell_the_world_who_you_are"
                    android:textColor="@color/colorWhite"
                     />

                <EditText
                    android:id="@+id/et_userBio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:imeOptions="actionNext"
                    android:hint=""
                    android:gravity="start"
                    android:padding="@dimen/margin_small_large"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/fb_share"
                    android:text="@string/facebook_string"
                    android:textColor="@color/colorWhite"
                    android:contentDescription="@string/app_name" />

                <EditText
                    android:id="@+id/ed_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:maxLines="1"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:hint=""
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingEnd="@dimen/margin_small"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tweet_share"
                    android:text="@string/twitter_string"
                    android:textColor="@color/colorWhite"
                    android:contentDescription="@string/app_name"
                     />

                <EditText
                    android:id="@+id/ed_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:background="@color/colorWhite"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingEnd="@dimen/margin_small"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/youtube_string"
                    android:src="@drawable/youtube_share"
                    android:textColor="@color/colorWhite"
                    android:contentDescription="@string/app_name" />

                <EditText
                    android:id="@+id/et_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:layout_marginStart="@dimen/margin_xlarge"
                    android:hint=""
                    android:paddingStart="@dimen/margin_xlarge"
                    android:paddingEnd="@dimen/margin_small"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </LinearLayout>

    </com.softuvo.ipundit.views.CustomLinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_user_profile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>