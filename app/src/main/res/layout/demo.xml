<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.softuvo.ipundit.views.CustomRelativeLayout
        android:id="@+id/rl_league_cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_small">

        <ImageView
            android:id="@+id/iv_league_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/iv_league_icon"/>

        <com.softuvo.ipundit.views.CustomRelativeLayout
            android:id="@+id/footballListeners"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_redcolor_shape"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtListenerCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white" />
        </com.softuvo.ipundit.views.CustomRelativeLayout>

    </com.softuvo.ipundit.views.CustomRelativeLayout>
</LinearLayout>