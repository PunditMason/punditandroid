<?xml version="1.0" encoding="utf-8"?>
<com.softuvo.ipundit.views.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.softuvo.ipundit.activities.SettingsScreen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorStandingScreenBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh_userdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/pading_3dp"
        android:background="@color/colorMatchScreenBackground">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_user_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</com.softuvo.ipundit.views.CustomLinearLayout>