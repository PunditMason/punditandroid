<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Pundit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">
    <com.softuvo.ipundit.views.CustomTextView
        android:id="@+id/tv_pundits_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.11"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_xlarge"
        android:padding="@dimen/margin_small_large"
        android:gravity="center"
        android:background="@color/colorBlack"
        Pundit:fonttextview="@string/helvetica_neue_medium"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.38">
        <ImageView
            android:id="@+id/iv_pundits_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_pundits_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pundits_overlay_image"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.58"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="@dimen/margin_xxlarge">

        <LinearLayout
            android:id="@+id/ll_btn_containers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.12"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_follow_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:background="@drawable/follow_me"
                android:contentDescription="@string/app_name"/>

            <ImageView
                android:id="@+id/iv_listen_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:background="@drawable/listen_live_gray"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/margin_small_large"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical">

                <com.softuvo.ipundit.views.CustomTextView
                    android:id="@+id/tv_pundits_following_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower_initial_count"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorBlack"
                    Pundit:fonttextview="@string/helvetica_neue_medium"/>

                <com.softuvo.ipundit.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/following_string"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    Pundit:fonttextview="@string/helvetica_neue_medium"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:gravity="center"
                android:orientation="vertical">

                <com.softuvo.ipundit.views.CustomTextView
                    android:id="@+id/tv_pundits_follower_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower_initial_count"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorBlack"
                    Pundit:fonttextview="@string/helvetica_neue_medium"/>

                <com.softuvo.ipundit.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:text="@string/follower_string"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    Pundit:fonttextview="@string/helvetica_neue_medium"/>
            </LinearLayout>
        </LinearLayout>



        <com.softuvo.ipundit.views.CustomTextView
            android:id="@+id/tv_bio"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:text="@string/bio_string"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            Pundit:fonttextview="@string/helvetica_neue_medium"/>
        <com.softuvo.ipundit.views.CustomTextView
            android:id="@+id/tv_pundits_bio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.34"
            Pundit:fonttextview="@string/helvetica_neue_medium"/>

    </LinearLayout>

</LinearLayout>
