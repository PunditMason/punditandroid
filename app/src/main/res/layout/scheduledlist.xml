<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/colorMatchScreenHeadingListenBackground"
    android:id="@+id/cv_user_details_container"
    android:layout_margin="3dp">
    <TextView
        android:id="@+id/tv_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_medium"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/margin_xlarge"
        android:layout_toStartOf="@+id/iv_edit"
        android:paddingEnd="@dimen/margin_xlarge" />
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/edit_schedule"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:contentDescription="@string/app_name"/>
</RelativeLayout>
