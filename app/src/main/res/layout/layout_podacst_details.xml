<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/colorRed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:layout_marginStart="@dimen/margin_small"
            android:text="@string/delete"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_large" />

    </RelativeLayout>

    <com.softuvo.ipundit.views.CustomRelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_back_image"
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>

        <com.softuvo.ipundit.views.CustomTextView
            android:id="@+id/tv_match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_large"
            android:layout_marginTop="@dimen/text_size_14sp"
            android:background="@color/colorWhite"
            android:fontFamily="@string/helvetica_neue_light"
            android:padding="@dimen/margin_small"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="visible" />


            <com.softuvo.ipundit.views.CustomTextView
                android:id="@+id/ed_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_below="@+id/tv_match_name"
                android:fontFamily="@string/helvetica_neue_light"
                android:imeOptions="actionDone"
                android:padding="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small_large"
                android:layout_marginTop="@dimen/margin_large"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="visible" />



        <com.softuvo.ipundit.views.CustomTextView
            android:id="@+id/tv_podacst_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_subtitle"
            android:layout_marginStart="@dimen/margin_small_large"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/colorWhite"
            android:fontFamily="@string/helvetica_neue_light"
            android:padding="@dimen/margin_small"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_14sp" />


        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_large"
            android:contentDescription="@string/app_name"
            android:src="@drawable/play_podcast" />

    </com.softuvo.ipundit.views.CustomRelativeLayout>
</FrameLayout>
