<?xml version="1.0" encoding="utf-8"?>
<com.softuvo.ipundit.views.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_signup_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softuvo.ipundit.activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:layout_marginLeft="@dimen/margin_xxxlarge"
        android:layout_marginRight="@dimen/margin_xxxlarge"
        android:padding="@dimen/margin_xlarge"
        android:background="@color/colorSignup"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xlarge"
            >
            <com.softuvo.ipundit.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_sizex_large"
                android:layout_marginTop="@dimen/margin_xxxlarge"
                android:layout_marginStart="@dimen/margin_small_large"
               />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pundit_sign"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.softuvo.ipundit.views.CustomEditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small_large"
            android:padding="@dimen/pading_large"
            android:hint="@string/name"
            android:background="@color/colorWhite"
            android:imeOptions="actionNext"
            android:drawableRight="@drawable/user"/>
        <com.softuvo.ipundit.views.CustomEditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small_large"
            android:padding="@dimen/pading_large"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:background="@color/colorWhite"
            android:drawableRight="@drawable/user"/>
        <com.softuvo.ipundit.views.CustomEditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small_large"
            android:padding="@dimen/pading_large"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:background="@color/colorWhite"
            android:drawableRight="@drawable/password"/>
        <com.softuvo.ipundit.views.CustomEditText
            android:id="@+id/ed_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small_large"
            android:padding="@dimen/pading_large"
            android:hint="@string/confirm_password"
            android:imeOptions="actionDone"
            android:background="@color/colorWhite"
            android:inputType="textPassword"
            android:drawableRight="@drawable/password"/>
        
        <com.softuvo.ipundit.views.CustomTextView
            android:id="@+id/tv_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white_button"
            android:layout_marginStart="@dimen/margin_small_large"
            android:layout_marginEnd="@dimen/margin_small_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_extra_large"
            android:text="@string/sign_up"
            android:gravity="center"
            android:textSize="@dimen/text_size_xlarge"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/pading_small"
            />

    </LinearLayout>

</com.softuvo.ipundit.views.CustomRelativeLayout>
